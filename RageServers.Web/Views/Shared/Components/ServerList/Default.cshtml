@model Dictionary<string, RageServers.Models.ServerInfo>


@foreach (var server in Model)
{
    <a asp-action="Details" asp-route-ip="@server.Key" asp-route-currentPlayers="@server.Value.Players"
       asp-route-slots="@server.Value.Maxplayers" asp-route-lang="@server.Value.Lang" asp-route-gamemode="@server.Value.Gamemode">
        <div class="row">
            <div class="col-sm-12">
                <span class="font-weight-light text-justify">
                    @server.Value.Name
                </span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-9">
                <span class="font-italic">
                    @server.Key
                </span>
            </div>
            <div class="col-sm-1">
                <span>
                    <img src="/images/baseline-person-24px.svg" />
                </span>
            </div>
            <div class="col-sm-1">
                <span class="font-bold">
                    @server.Value.Players
                </span>
            </div>
        </div>
    </a>

}

